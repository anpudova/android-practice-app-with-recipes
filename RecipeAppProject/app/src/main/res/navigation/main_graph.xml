<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/recipeSearchFragment">

    <fragment
        android:id="@+id/recipeSearchFragment"
        android:name="com.example.recipeappproject.ui.screen.RecipeSearchFragment"
        android:label="RecipeSearchFragment" >
        <action
            android:id="@+id/action_recipeSearchFragment_to_detailRecipeFragment"
            app:destination="@id/detailRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailRecipeFragment"
        android:name="com.example.recipeappproject.ui.screen.DetailRecipeFragment"
        android:label="DetailRecipeFragment" >
        <action
            android:id="@+id/action_detailRecipeFragment_to_favoriteRecipeFragment"
            app:destination="@id/favoriteRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.recipeappproject.ui.screen.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.recipeappproject.ui.screen.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_self"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.recipeappproject.ui.screen.RegistrationFragment"
        android:label="RegistrationFragment" >
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteRecipeFragment"
        android:name="com.example.recipeappproject.ui.screen.FavoriteRecipeFragment"
        android:label="FavoriteRecipeFragment" >
        <action
            android:id="@+id/action_favoriteRecipeFragment_to_detailRecipeFragment"
            app:destination="@id/detailRecipeFragment" />
        <action
            android:id="@+id/action_favoriteRecipeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>